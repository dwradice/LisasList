extends baseEmail

block content
    p Hello #{firstName},
        p Forgot your password? follow the link below to reset
        table.bttn.bttn-primary(role='presentation', border='0' cellpadding='0' cellspacing='0')
            tbody
                tr
                    td(align='left')
                         table(role='presentation', border='0' cellpadding='0' cellspacing='0')
                            tbody
                                tr
                                    td
                                        a(href=`${url}`) Reset your password
        p If you didn't request a reset, please ignore this message.

